{
    "manifest_version": 3,
    "name": "Etty",
    "description": "Etty is a simple extension that allows you to find the etymological history of a word.",
    "version": "1.1",
    "permissions" : [
        "contextMenus"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://www.etymonline.com/*",
        "http://www.etymonline.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icons8-book-justicon-flat-16.png",
        "32": "icons/icons8-book-justicon-flat-32.png",
        "96": "icons/icons8-book-justicon-flat-96.png"
    }
}