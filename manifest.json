{
    "manifest_version": 3,
    "name": "Etty",
    "description": "Etty is a simple extension that allows you to find the etymological history of a word without leaving the page.",
    "version": "1.0",
    "permissions" : [
        "contextMenus",
        "activeTab",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "host_permissions": [
        "https://www.etymonline.com/*",
        "http://www.etymonline.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    }
}